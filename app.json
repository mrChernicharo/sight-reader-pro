{
    "expo": {
        "name": "Sight Reader Pro",
        "slug": "sight-reader-pro",
        "version": "1.0.24",
        "orientation": "portrait",
        "icon": "./assets/images/sight-reader-art.png",
        "scheme": "sight-reader-pro",
        "userInterfaceStyle": "automatic",
        "android": {
            "versionCode": 24,
            "package": "com.chernicharo.sightreaderpro",
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/sight-reader-art.png",
                "backgroundColor": "#000000"
            }
        },
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.chernicharo.sightreaderpro",
            "infoPlist": {
                "ITSAppUsesNonExemptEncryption": false
            }
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/images/favicon.png"
        },
        "experiments": {
            "typedRoutes": true
        },
        "extra": {
            "eas": {
                "projectId": "2f9fca84-3023-4178-b59c-f9c2818a7c3b"
            }
        },
        "plugins": [
            "expo-asset",
            "expo-router",
            "expo-font",
            "expo-navigation-bar",
            [
                "expo-dev-launcher",
                {
                    "launchMode": "most-recent"
                }
            ],
            [
                "expo-splash-screen",
                {
                    "image": "./assets/images/sight-reader-art-1024.png",
                    "backgroundColor": "#000000",
                    "dark": {
                        "image": "./assets/images/sight-reader-art-1024.png",
                        "backgroundColor": "#000000"
                    },
                    "imageWidth": 240
                }
            ]
        ]
    }
}
